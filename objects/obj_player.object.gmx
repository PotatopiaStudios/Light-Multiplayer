        if(!infected){
            scr_player_move(sprint);
            spd = basestat.spd*(1 - (.3*((total_items*ITEM_WEIGHT)/ITEM_LIMIT)));
            scr_player_rotate();
            scr_player_item();
            psel = selected;
            if(mouse_wheel_down()){
                selected--;
                if(selected &lt; 0){
                    selected = ITEMS-1;
                }
                with(client){
                    client_send_item(other.selected, other.inv[other.selected]);
                }
            }
            if(mouse_wheel_up()){
                selected++;
                if(selected &gt; ITEMS-1){
                    selected = 0;
                }
                with(client){
                    client_send_item(other.selected, other.inv[other.selected]);
                }
            }
        }else{
            dir += scr_monster_move(msprint, dir);
            
        }
        camera.x += (x-camera.x)*.1;
        camera.y += (y-camera.y)*.1;
    
    }

}else{
